<%= form_for([@user, @workout]) do |f|%>

	<%= f.label :estimated_time, "Estimated Time"%>
	<%= f.text_field :estimated_time, :placeholder => "Target Completion Time", class: "workout-form-control"%>

	<%= f.label :gym_style, "Gym Style (Optional)"%>
	<%= f.text_field :gym_style, :placeholder => "Apartment Complex Gym, Commercial Gym, Full Athletic Training Facility", class: "workout-form-control" %>

	<%= f.label :fitness_goal, "Fitness Goal"%>
	<%= f.text_area :fitness_goal, :placeholder => "HIIT, Football, Iron Man Triathlon", class: "workout-form-control"%>

	<%= f.submit "Add Exercises", class: "btn btn-primary"%>
<% end %>