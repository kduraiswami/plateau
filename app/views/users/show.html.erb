<% provide(:title, @user.name) %>
<div class="row">
	<aside class="col-md-4">
		<section class="user_info">
			<%= gravatar_for @user %>
		</section>
		<div class="profile_information">
			<div class="user_name">
				<%= @user.name %>
			</div><hr>
			<i class="fa fa-globe fa-lg"></i>&nbsp;&nbsp;<%= @user.location %><br>
			<i class="fa fa-trophy fa-lg"></i>&nbsp;&nbsp;<%= @user.current_practice%><br><br>
			<div class="aboutme_title">
				About Me:
			</div>
			<%= @user.biography%>
		</div>
	</aside>
	
	<%= link_to "Build Your Workout", workout_path, class: "btn btn-lg"%>

</div>