<% provide(:title, @user.name) %>
<div class="row">
	<aside class="col-md-4">
		<section class="user_info">
			<%= image_tag(@user.profile.url) %>
		</section>
		<div class="profile_information">
			<div class="user_name">
				<%= @user.name %>
			</div><hr>
			<i class="fa fa-globe fa-lg"></i>&nbsp;&nbsp;<%= @user.location %><br>
			<i class="fa fa-trophy fa-lg"></i>&nbsp;&nbsp;<%= @user.current_practice%><br><br>
			<div class="aboutme_title">
				About Me:
			</div>
			<%= @user.biography%>
		</div>
	</aside>

	<aside class = "col-md-6">
		<% if @user == current_user%>
		<%= link_to 'Build A Workout', new_user_workout_path(current_user), class: "workout-button btn btn-lg"%>	
		<%end%>

		<% if !@user.workouts.blank?%>
		<%= render 'layouts/workoutlist.html.erb'%>
		<%end%>

		<% if @workouts.blank? && @user == current_user%>
			<%= render 'layouts/noworkout.html.erb'%>
		<%end%>
	</aside>
	

</div>